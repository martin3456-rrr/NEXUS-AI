{
  "annotations": {
    "list": []
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Traffic (Ruch - RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"$service_name\"}[1m]))",
          "legendFormat": "{{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "unit": "reqps"
    },
    {
      "title": "Errors (Błędy 5xx - RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5.*\", job=\"$service_name\"}[1m]))",
          "legendFormat": "5xx Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "red" } }
      },
      "unit": "reqps"
    },
    {
      "title": "Business Metrics",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Conversion Rate (Success vs Total)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "sum(rate(payments_processed_total{status=\"success\"}[5m])) / sum(rate(payments_processed_total[5m])) * 100",
          "legendFormat": "Conversion Rate %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "title": "Revenue Stream (USD / min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "expr": "sum(rate(payments_revenue_sum[1m])) * 60",
          "legendFormat": "Revenue per Minute",
          "refId": "A"
        }
      ],
      "unit": "currencyUSD",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "green" },
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Latency (Opóźnienia - p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"$service_name\"}[5m])) by (le))",
          "legendFormat": "p95 Latency",
          "refId": "A"
        }
      ],
      "unit": "s"
    },
    {
      "title": "Saturation (Memory Usage)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{container_label_com_docker_compose_service=\"$service_name\"})",
          "legendFormat": "Memory",
          "refId": "A"
        }
      ],
      "unit": "bytes"
    },
    {
      "title": "Saturation (CPU Usage)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container_label_com_docker_compose_service=\"$service_name\"}[1m])) * 100",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "unit": "percent"
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service_name",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_server_requests_seconds_count, job)",
        "refresh": 1,
        "sort": 1,
        "multi": false,
        "includeAll": false
      }
    ]
  },
  "title": "NEXUS-AI Golden Signals",
  "uid": "nexus-golden-signals",
  "version": 1,
  "schemaVersion": 38
}